# Local Development Environment Configuration
# Copy this file to terraform.tfvars and customize as needed:
#   cp terraform.tfvars.example terraform.tfvars

project_name = "detection-lab"
environment  = "local"

# Docker
docker_host = "unix:///var/run/docker.sock"

# SIEM
elasticsearch_version = "8.11.0"
elasticsearch_memory  = "4g"
kibana_version        = "8.11.0"

# Storage (MinIO) - CHANGE THESE for any non-local deployments
minio_root_user     = "minioadmin"
minio_root_password = "CHANGE_ME_IN_PRODUCTION"

# Vector
vector_version = "0.34.1-alpine"

# Linux Target
linux_target_image = "ubuntu:22.04"

# Optional Components
enable_caldera  = false
caldera_version = "4.2.0"

# Network
subnet = "172.28.0.0/16"
